<% layout('/layouts/boilerplate') -%>

    <body class="py-4 bg-body-tertiary">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <main id="logForm" class="form-signin m-auto">
                <h1 class="h3 mb-3 fw-normal text-nowrap">Please login your account</h1>
                <div class="form-floating">
                    <input name="username" type="text" class="form-control" id="Username" placeholder="Username"
                        required>
                    <label for="Username">Username</label>
                </div>
                <div class="form-floating">
                    <input name="password" type="password" class="form-control" id="floatingPassword"
                        placeholder="Password" required>
                    <label for="floatingPassword">Password</label>
                </div>
                <br>
                <div class="">
                    <button class="btn w-100 btn-primary py-2" type="submit">Login</button>
                </div>
            </main>
        </form>

        <script src="/docs/5.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    </body>