<% layout('/layouts/boilerplate') -%>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Create new data</title>
    </head>

    <body>
        <div class="container col-md-8">
            <h2>Add New Data</h2>
            <ul>
                <form id="form" novalidate class="needs-validation" action="/listings/create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="">
                            <li>Title:<input class="form-control" type="text" name="listing[title]"
                                    placeholder="Enter title" required>
                                <div class="valid-feedback">Look good</div>
                                <div class="invalid-feedback">Please enter a Title.</div>
                            </li>
                        </div>

                        <div class="">
                            <li>Description: <input class="form-control" type="text" name="listing[description]"
                                    placeholder="Enter description" required></input>
                                <div class="valid-feedback">Look good</div>
                                <div class="invalid-feedback">Please enter a Description.</div>
                            </li>
                        </div>
                        <div>
                            <li>
                                Image URL / Upload image:
                                <div class="row">
                                    <!-- <div class="col-md-6"><input class="form-control col-8" type="text"
                                            name="listing[image.url]" placeholder="https://www.example.com/image">
                                        </div> -->
                                    <div class="">
                                        <input name="listing[image]" type="file" class="form-control" id="" required>
                                    </div> 
                                </div>
                                <!-- <div class="valid-feedback">Please enter Picture of area.(Optional)</div>
                                <div class="invalid-feedback"></div> -->
                            </li>
                        </div>
                        <div class="col-md-4">
                            <li>Price: <input class="form-control" type="number" min="0" name="listing[price]"
                                    placeholder="In Rupees" required>
                                <div class="valid-feedback">Look good</div>
                                <div class="invalid-feedback">Please enter a Price.</div>
                            </li>
                        </div>
                        <div class="col-md-8">
                            <li>Country: <input class="form-control" type="text" name="listing[country]"
                                    placeholder="Example- India" required>
                                    <div class="valid-feedback">Look good</div>
                                    <div class="invalid-feedback">Please enter Country.</div>
                            </li>
                        </div>
                        <div class="">
                            <li>Location: <input class="form-control" type="text" name="listing[location]"
                                    placeholder="Example- Thana, new delhi" required>
                                <div class="valid-feedback">Look good</div>
                                <div class="invalid-feedback">Please enter Location.</div>
                            </li>
                        </div>

                        <button type="submit" class="btn btn-sm border-dark mt-2 btn-outline-secondary">Add</button>
                    </div>

                </form>
            </ul>
        </div>
    </body>

    </html>