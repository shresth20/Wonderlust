<% layout('/layouts/boilerplate') -%>

    <body>
        <top class="">
            <div id="filters" class="text-nowrap fw-bold">
                <div class="filters">
                    <i class="fa-solid fa-fire"></i>
                    <p>Trandings</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-mountain-city"></i>
                    <p>Iconic Cities</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-mountain"></i>
                    <p>Mountain</p>
                </div>
                <div class="filters">
                    <i class="fa-brands fa-fort-awesome"></i>
                    <p>Castles</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-person-swimming"></i>
                    <p>Amazing Pools</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-campground"></i>
                    <p>Camping</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-cow"></i>
                    <p>Farms</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-snowflake"></i>
                    <p>Arctic</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-city"></i>
                    <p>City</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-umbrella-beach"></i>
                    <p>Beach</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-sailboat"></i>
                    <p>Boats</p>
                </div>
                <div class="filters">
                    <i class="fa-solid fa-person-skiing"></i>
                    <p>Ski-in/out</p>
                </div>

                <div class="tax-toggle form-check form-switch form-check-reverse end-0 ps-3 pe-5">
                    <input class="form-check-input " type="checkbox" id="flexSwitchCheckReverse">
                    <label class="form-check-label" for="flexSwitchCheckReverse">Display total taxes</label>
                </div>
            </div>
        </top>
        <div id="allcards" class="cards row-col-lg-6">
            <% for( let list of lists ) { %>
                <a href="/listings/<%= list.id %>">
                    <div class="card rounded-3 m-3 " style="width: 18rem; height: 18rem;">
                        <img style="height: 12rem;" src="<%= list.image.url %>" class="card-img-top rounded-2"
                            alt="...">
                        <div class="card-body">
                            <b class="card-text">
                                <%= list.title %>
                            </b>
                            <p class="card-text">&#8377; <%= list.price.toLocaleString("en-IN") %>/ night <i
                                        class="tax"> + 18% GST</i></p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>